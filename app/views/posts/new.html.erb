<p id="notice"> <%= notice %></p>
<h1>Create post</h1>

<%= form_with model: @post do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div><br />
  <div class="actions"><%= f.submit "Create Post" %></div>
<% end %>